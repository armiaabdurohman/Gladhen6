<Window
    x:Class="Gladhen6.Views.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Gladhen6.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:ShellWindowViewModel}"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="Wraping" TargetType="{x:Type TextBlock}">
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background=" #e5e6eb">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="4"
                VerticalAlignment="Center"
                Text="Name" />
            <TextBox
                Grid.Column="1"
                Margin="4"
                Padding="2"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button
                    Margin="4"
                    Padding="4,2"
                    Command="{Binding SearchCommand}"
                    Content="Search" />
                <Button
                    Margin="4"
                    Padding="4,2"
                    Command="{Binding RefreshCommand}"
                    Content="Refresh" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Background="#f8f8fa">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Margin="5"
                    FontSize="25"
                    FontWeight="DemiBold"
                    Text="Package List" />
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button
                        MaxHeight="25"
                        Margin="3"
                        Padding="3"
                        Content="Add Package" />
                    <Button
                        MaxHeight="25"
                        Margin="3"
                        Padding="3"
                        Content="Remove" />
                </StackPanel>
            </Grid>
            <DataGrid
                Grid.Row="1"
                Margin="4"
                Padding="3"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                ItemsSource="{Binding Packages}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="3*"
                        Binding="{Binding Name}"
                        ElementStyle="{StaticResource Wraping}"
                        Header="Name" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Version}"
                        ElementStyle="{StaticResource Wraping}"
                        Header="Version" />
                    <DataGridTextColumn
                        Width="6*"
                        Binding="{Binding Description}"
                        ElementStyle="{StaticResource Wraping}"
                        Header="Description" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <StackPanel
            Grid.Row="2"
            Background="#afafaf"
            Orientation="Horizontal">
            <TextBlock
                Margin="4"
                FontSize="10"
                Text="{Binding Status}" />
        </StackPanel>
    </Grid>
</Window>
